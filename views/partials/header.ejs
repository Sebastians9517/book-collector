            <a href="/auth/logout" class="nav-link">Log Out</a>
          </li>
          <li class="nav-item">
            <img src="<%= user.avatar %> " alt="#" id="avatarPhoto">
          </li>
          <% } else { %>
          <li class="nav-item">
            <a href="/auth/google" class="nav-link">Login with Google</a>
          </li>

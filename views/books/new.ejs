<form action="/books" method="POST">
    <div id="container">
        <h1>&bull; Add a new book &bull;</h1>
        <div class="underline">
        </div>
        <form action="/books" method="POST" id="contact_form">
          <div class="name">
            <label for="name"></label>
            <input type="text" placeholder="Book title" name="title" id="name_input" required>
          </div>
          <div class="email">
            <label for="email"></label>
            <input type="text" placeholder="Author" name="author" id="email_input">
          </div>
          <div class="telephone">
            <label for="name"></label>
            <input type="text" placeholder="Release year (YYYY)" name="publicationDate" id="telephone_input">
          </div>
          <div class="subject">
            <label for="subject"></label>
            <select placeholder="Already read?" name="read" id="subject_input" required>
              <option disabled hidden selected>Already read?</option>
              <option>Yeah</option>
              <option>Not yet, but looking forward to it</option>
            </select>
          </div>
          <div class="message">
            <label for="message"></label>
            <textarea name="description" placeholder="Book synopsis (optional)" id="message_input" cols="30" rows="5"></textarea>
          </div>
          <div class="submit">
            <button type="submit" value="New Book" id="form_button">Add new book</button>
          </div>
        </form>
      </div>
</form>

